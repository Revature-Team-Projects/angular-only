pipeline {
    agent any 
    stages {
        stage('Build') {
          steps {
                sh '''
                cd /home/ec2-user/.jenkins/workspace/ang_clone/angularTest
                ng build
                '''
          }
        }
        stage('Test'){
            steps{
                sh '''
                cd /home/ec2-user/.jenkins/workspace/ang_clone/angularTest
                npm install phantomJS --save-dev
                npm run test
                '''
            }
        }
    }
}