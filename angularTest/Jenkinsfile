pipeline {
    agent any 
    stages {
        stage('npm install') {
            steps {
                sh "cd /home/ec2-user/.jenkins/workspace/Angular_Trial_Test_Stage_master/angularTest/"
                sh "npm install"
            }
        }
        stage('Unit Tests') {
          steps {
              sh "npm run test:ci"
          }
        }
        stage('e2e tests') {
          steps {
              sh "npm run e2e:ci"
          }
        }
        stage('Deploy'){
            steps{
                sh "aws ui-core cp ./dist ui-core"
            }
        }
    }
}