pipeline {
    agent any 
    stages {
        stage('Npm install'){
            steps{
                sh '''
                cd /home/ec2-user/.jenkins/workspace/ang_clone/angularTest
                rm -rf /node_modules/
                npm i
                '''
            }
        }
        // stage('Build') {
        //   steps {
        //         sh '''
        //         cd /home/ec2-user/.jenkins/workspace/ang_clone/angularTest
        //         ng build
        //         '''
        //   }
        // }
        stage('Test'){
            steps{
                sh '''
                export OPENSSL_CONF=$WORKSPACE/openssl.cnf
                sudo yum -y install fontconfig
                cd /home/ec2-user/.jenkins/workspace/ang_clone/angularTest
                ng test
                '''
            }
        }
    }
}